<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Monday opens at</th>
      <th>Monday closes at</th>
      <th>Tuesday opens at</th>
      <th>Tuesday closes at</th>
      <th>Wednesday opens at</th>
      <th>Wednesday closes at</th>
      <th>Thursday opens at</th>
      <th>Thursday closes at</th>
      <th>Friday opens at</th>
      <th>Friday closes at</th>
      <th>Saturday opens at</th>
      <th>Saturday closes at</th>
      <th>Sunday opens at</th>
      <th>Sunday closes at</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.monday_opens_at %></td>
        <td><%= schedule.monday_closes_at %></td>
        <td><%= schedule.tuesday_opens_at %></td>
        <td><%= schedule.tuesday_closes_at %></td>
        <td><%= schedule.wednesday_opens_at %></td>
        <td><%= schedule.wednesday_closes_at %></td>
        <td><%= schedule.thursday_opens_at %></td>
        <td><%= schedule.thursday_closes_at %></td>
        <td><%= schedule.friday_opens_at %></td>
        <td><%= schedule.friday_closes_at %></td>
        <td><%= schedule.saturday_opens_at %></td>
        <td><%= schedule.saturday_closes_at %></td>
        <td><%= schedule.sunday_opens_at %></td>
        <td><%= schedule.sunday_closes_at %></td>
        <td><%= schedule.restaurant_id %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

